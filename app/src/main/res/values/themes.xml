<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SMKRSD" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentLight</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


        <!--    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
                <item name="android:typeface">sans</item>

            </style>-->

        <!-- Base application theme. -->
        <style name="Theme.English" parent="Theme.MaterialComponents.DayNight.NoActionBar">

            <item name="fontFamily">@font/roboto</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:spinnerStyle">@style/spinner</item>
            <item name="android:actionBarStyle">@style/topBarStyle</item>
            <item name="android:textViewStyle">@style/labels</item>
            <item name="android:editTextStyle">@style/textInput</item>
            <item name="radioButtonStyle">@style/radiobutton</item>
            <item name="checkboxStyle">@style/checkbox</item>
            <item name="hintEnabled">false</item>
            <item name="android:buttonStyle">@style/button</item>
            <item name="android:textColorHint">@color/grayLight</item>
            <item name="android:typeface">sans</item>
            <item name="android:fillAfter">true</item>
            <item name="android:enterFadeDuration">600</item>
            <item name="android:exitFadeDuration">200</item>
            <item name="android:layoutDirection">ltr</item>
            <item name="android:animateLayoutChanges">false</item>

        </style>

        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:textColorSecondary">@android:color/white</item>
        </style>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <item name="fontFamily">@font/roboto</item>
            <item name="android:layoutDirection">ltr</item>
            <item name="android:actionBarStyle">@style/topBarStyle</item>
        </style>

        <style name="AppThemeUrdu" parent="Theme.MaterialComponents.DayNight.NoActionBar">

            <item name="android:fontFamily">@font/jameel</item>
            <item name="android:textSize">18sp</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>
            <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
            <item name="android:spinnerStyle">@style/spinner</item>
            <item name="android:actionBarStyle">@style/topBarStyle</item>
            <item name="android:textViewStyle">@style/labels</item>
            <item name="android:editTextStyle">@style/textInput</item>
            <item name="radioButtonStyle">@style/radiobutton</item>
            <item name="checkboxStyle">@style/checkbox</item>
            <item name="hintEnabled">false</item>
            <item name="android:buttonStyle">@style/button</item>
            <item name="android:textColorHint">@color/grayLight</item>
            <item name="android:typeface">sans</item>
            <item name="android:fillAfter">true</item>
            <item name="android:enterFadeDuration">600</item>
            <item name="android:exitFadeDuration">200</item>
            <item name="android:layoutDirection">rtl</item>
            <item name="android:animateLayoutChanges">false</item>

        </style>

        <style name="BackgroundStyle" parent="android:Widget.ScrollView">
            <item name="android:background">@drawable/app_bg_gray</item>
            <item name="android:padding">24dp</item>
        </style>

        <style name="topBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:textColorSecondary">@color/white</item>
            <item name="android:background">@color/colorPrimary</item>
            <item name="android:typeface">sans</item>
            <item name="android:fontFamily">@font/jameel</item>
            <item name="android:maxHeight">@dimen/abc_action_bar_default_height_material</item>
            <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
            <item name="titleTextAppearance">@style/Widget.AppCompat.Toolbar</item>
        </style>

        <style name="labels" parent="@android:style/TextAppearance.Widget.TextView">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">18sp</item>
            <item name="android:layout_marginTop">24dp</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:fontFamily">@font/roboto</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingStart">15dp</item>
            <item name="android:paddingEnd">6dp</item>
            <item name="android:paddingTop">6dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
            <item name="android:background">@color/colorPrimary</item>


            <!--
                            <item name="android:background">@color/colorPrimary_overlay</item>
            -->

        </style>

        <style name="textInput">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginBottom">4dp</item>
            <item name="android:elevation">1dp</item>
            <item name="android:background">@drawable/options_separator</item>
            <item name="android:textColor">@color/grayDark</item>
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingStart">24dp</item>
            <item name="android:paddingEnd">8dp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:focusable">true</item>
            <item name="android:clickable">true</item>
            <!--
                    <item name="android:textStyle">bold</item>
            -->
            <!--        <item name="android:textDirection">ltr</item>-->
            <item name="android:focusableInTouchMode">true</item>
        </style>

        <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">

            <item name="android:gravity">center_vertical</item>
            <item name="android:elevation">1dp</item>
            <item name="android:radius">2dp</item>
            <item name="android:drawablePadding">8dp</item>

            <!--
                    <item name="android:paddingStart">24dp</item>
            -->
            <item name="android:paddingEnd">8dp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:background">@drawable/options_separator</item>
        </style>

        <style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
            <item name="android:gravity">center_vertical</item>
            <item name="android:paddingStart">4dp</item>
            <item name="android:drawablePadding">4dp</item>
            <item name="android:paddingEnd">8dp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:clickable">true</item>

            <item name="android:background">@drawable/options_separator</item>

        </style>

        <style name="button" parent="Widget.AppCompat.Button">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">match_parent</item>
            <item name="android:minHeight">36dp</item>
            <item name="android:radius">2dp</item>
            <item name="android:elevation">1dp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:typeface">sans</item>
            <item name="android:textColor">@color/gray</item>
            <!--        <item name="android:background">@drawable/background_grad</item>-->
        </style>

        <style name="spinner" parent="Widget.AppCompat.Spinner">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#ff0000</item>
            <item name="android:background">#efefef</item>
            <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
            <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>

        </style>

        <style name="spinnerDropDownItemStyle">
            <item name="android:padding">8dp</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

        <style name="spinnerItemStyle">
            <item name="android:padding">8dp</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:text">SpinnerItemText</item>
        </style>

        <!--Card View Start-->
        <style name="cardView">
            <!--
                    <item name="android:background">@color/white</item>
            -->
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_margin">8dp</item>
            <item name="android:background">@color/grayLight</item>

            <!--<item name="android:layout_marginRight">10dp</item>-->
            <!--<item name="android:layout_marginLeft">10dp</item>-->
            <item name="cardCornerRadius">7dp</item>
            <item name="cardElevation">1dp</item>
        </style>

        <style name="quesNum">
            <item name="android:background">@color/colorAccent</item>
            <item name="android:textColor">@color/colorPrimaryDark</item>
            <item name="android:textAllCaps">true</item>
            <item name="android:padding">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:textSize">18sp</item>
            <item name="android:gravity">center</item>
            <item name="android:fontFamily">@font/roboto</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
            <item name="android:typeface">sans</item>
        </style>

        <style name="info">
            <item name="android:layout_margin">4dp</item>
            <item name="android:background">#FFEB9C</item>
            <item name="android:textColor">@color/redLight</item>
            <item name="android:padding">8dp</item>
            <item name="android:minHeight">52dp</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">normal</item>
            <item name="android:letterSpacing">0.04</item>


        </style>

        <style name="sub_labels">
            <item name="android:layout_marginTop">0dp</item>
            <item name="android:background">@drawable/sub_labels_separator</item>
            <item name="android:gravity">center</item>
            <item name="android:paddingStart">8dp</item>
            <item name="android:paddingEnd">8dp</item>
            <item name="android:paddingTop">8dp</item>
            <item name="android:paddingBottom">8dp</item>
            <item name="android:textAllCaps">true</item>

            <item name="android:minHeight">16dp</item>
            <item name="android:layout_height">16dp</item>
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">@color/colorPrimary</item>
        </style>

        <style name="DatePickerStyle" parent="Widget.AppCompat.EditText">
            <item name="android:layout_gravity">center_horizontal|center_vertical</item>
            <item name="android:textColor">@color/colorPrimaryDark</item>
            <item name="android:selectableItemBackgroundBorderless">@color/white</item>
            <item name="colorControlHighlight">@color/colorPrimary</item>
        </style>

        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <style name="AppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="ProgressBarStyle">
            <item name="colorAccent">@color/colorPrimary</item>
        </style>


        <style name="Summary_Layout" parent="Theme.AppCompat.Light.DarkActionBar"></style>

        <style name="ToolbarTheme">
            <item name="titleTextAppearance">@style/ToolbarTheme.Title</item>
        </style>

        <style name="ToolbarTheme.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
            <item name="android:textColor">@color/colorAccent</item>
        </style>

        <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
            <!-- this is new -->
            <item name="colorAccent">@color/colorAccent</item>

            <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
            <item name="android:colorAccent">@color/colorPrimaryDark</item>
        </style>

        <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
            <item name="android:headerBackground">@color/colorPrimary</item>
            <item name="android:calendarTextColor">@color/colorPrimaryDark</item>
            <item name="android:dayOfWeekBackground">@color/colorPrimaryDark</item>
            <item name="android:yearListSelectorColor">@color/colorAccent</item>
            <item name="android:datePickerMode">calendar</item>
            <item name="android:minDate">01/01/2000</item>
        </style>


    <style name="Theme.splashscreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/app_icon</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>